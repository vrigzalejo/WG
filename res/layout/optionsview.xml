<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
   >

    <PreferenceCategory android:title="General Options" >

        <ListPreference
            android:defaultValue="0"
            android:dialogTitle="Select Dictionary"
            android:entries="@array/dictionarynames"
            android:entryValues="@array/dictionaryvalues"
            android:key="dictpref"
            android:summary="Language variant for words"
            android:title="Select Dictionary" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="wakelock"
            android:title="Keep screen on" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="sounds"
            android:summary="Enable sound in Main Game"
            android:title="Sound" />
        
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="timedgame"
            android:summary="Beat the clock"
            android:title="Timed Game" />
        
    </PreferenceCategory>

</PreferenceScreen>